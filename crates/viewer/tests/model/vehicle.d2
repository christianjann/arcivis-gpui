title: Vehicle Architecture

Vehicle: {
  shape: class
  - mass: Real
  - maxSpeed: Real
}

Engine: {
  shape: class
  - horsepower: Real
  - displacement: Real
}

Wheel: {
  shape: class
  - diameter: Real
  - type: String
}

Transmission: {
  shape: class
  - gears: Integer
  - type: String
}

Car: {
  shape: class
  - numDoors: Integer = 4
}

Truck: {
  shape: class
  - bedLength: Real
  - cargoCapacity: Real
}

Vehicle -> Engine: "engine"
Vehicle -> Wheel: "wheels [4]"
Vehicle -> Transmission: "transmission"

Car -> Vehicle: "inherits"
Truck -> Vehicle: "inherits"
